<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradeManagement_Result1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="15dp"
                        android:text="Results"
                        android:textColor="#730A1F"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="40dp"

                        android:src="@drawable/result_photo" />

                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#EA3689"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/circularProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/circularprogressbar2"
                    android:secondaryProgress="100"
                    />

                <TextView
                    android:id="@+id/txtCGPA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="15dp"
                    android:text="7.80 CGPA"
                    android:textColor="#730A1F"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"
                        android:background="#00D0B7B7"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/android"
                            android:layout_height="50dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtResult.Course_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="CSE225"
                                android:textColor="#000"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/circularProgressBar2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:indeterminate="false"
                                android:layout_marginLeft="250dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/circularprogressbar2"
                                android:secondaryProgress="100" />
                            <TextView
                                android:id="@+id/txtResult.TGPA_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7.80"
                                android:textColor="#730A1F"
                                android:textSize="15dp"
                                android:textStyle="bold"/>


                            <Button
                                android:id="@+id/btnResult_1"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:ems="5"
                                android:text="edit"
                                android:backgroundTint="@color/teal_200"
                                />


                        </LinearLayout>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"
                        android:background="#00D0B7B7"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/web_d"
                            android:layout_height="50dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginLeft="10dp"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtResult.Course_2"
                                android:layout_width="wrap_content"
                                android:text="CSE423"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_height="wrap_content"/>
                            <ProgressBar
                                android:id="@+id/circularProgressBar3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:indeterminate="false"
                                android:layout_marginLeft="250dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/circularprogressbar2"
                                android:secondaryProgress="100" />
                            <TextView
                                android:id="@+id/txtResult.TGPA_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7.80"
                                android:textColor="#730A1F"
                                android:textSize="15dp"
                                android:textStyle="bold"/>
                            <Button
                                android:id="@+id/btnResult_2"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:ems="5"
                                android:text="Edit"
                                android:backgroundTint="@color/teal_200"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"
                        android:background="#00D0B7B7"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/web_d"
                            android:layout_height="50dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtResult.Course_3"
                                android:layout_width="wrap_content"
                                android:text="CSE427"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_height="wrap_content"/>

                            <ProgressBar
                                android:id="@+id/circularProgressBar4"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:indeterminate="false"
                                android:layout_marginLeft="250dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/circularprogressbar2"
                                android:secondaryProgress="100" />
                            <TextView
                                android:id="@+id/txtResult.TGPA_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7.80"
                                android:textColor="#730A1F"
                                android:textSize="15dp"
                                android:textStyle="bold"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:ems="5"
                                android:text="Edit"
                                android:id="@+id/btnResult_3"
                                android:backgroundTint="@color/teal_200"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"
                        android:background="#00D0B7B7"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/virtual"
                            android:layout_height="50dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtResult.Course_4"
                                android:layout_width="wrap_content"
                                android:text="INT250"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_height="wrap_content"/>

                            <ProgressBar
                                android:id="@+id/circularProgressBar5"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:indeterminate="false"
                                android:layout_marginLeft="250dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/circularprogressbar2"
                                android:secondaryProgress="100" />
                            <TextView
                                android:id="@+id/txtResult.TGPA_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7.80"
                                android:textColor="#730A1F"
                                android:textSize="15dp"
                                android:textStyle="bold"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:ems="5"
                                android:id="@+id/btnResult_4"
                                android:text="Edit"
                                android:backgroundTint="@color/teal_200"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"
                        android:background="#00D0B7B7"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:src="@drawable/virtual_lab"
                            android:layout_height="50dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtResult.Course_5"
                                android:layout_width="wrap_content"
                                android:text="PEA308"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_height="wrap_content"/>

                            <ProgressBar
                                android:id="@+id/circularProgressBar6"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:indeterminate="false"
                                android:layout_marginLeft="250dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/circularprogressbar2"
                                android:secondaryProgress="100" />
                            <TextView
                                android:id="@+id/txtResult.TGPA_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7.80"
                                android:textColor="#730A1F"
                                android:textSize="15dp"
                                android:textStyle="bold"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:ems="5"
                                android:id="@+id/btnResult_5"
                                android:text="Edit"
                                android:backgroundTint="@color/teal_200"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.drawerlayout.widget.DrawerLayout>